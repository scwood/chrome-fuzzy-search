{
  "manifest_version": 2,
  "name": "Fuzzy Tab Switcher",
  "version": "1.0",
  "description": "Switch between tabs in your browser like you'd switch between files in your editor.",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Opens index.html"
    }
  }
}
